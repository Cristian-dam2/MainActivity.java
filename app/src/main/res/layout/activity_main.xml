        app:layout_constraintStart_toEndOf="@+id/c25"
        app:layout_constraintTop_toBottomOf="@+id/c17"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botongirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@color/naranja"
        android:fontFamily="sans-serif-black"
        android:text="@string/girar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/boton_Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/boton_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/naranja"
        android:checkable="false"
        android:clickable="false"
        android:fontFamily="sans-serif-black"
        android:text="@string/nombreusuario"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/CabezeraMain"
        tools:ignore="MissingConstraints,TextContrastCheck"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/boton_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/naranja"
        android:checkable="false"
        android:clickable="false"
        android:fontFamily="sans-serif-black"
        android:text="@string/puntos"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CabezeraMain"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/boton_Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/naranja"
        android:text="@string/finalizar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:text="@string/cero"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_puntos" />

    <EditText
        android:id="@+id/editTextColocarLetra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:autofillHints=""
        android:backgroundTint="@color/naranja"
        android:fontFamily="sans-serif-black"
        android:hint="@string/introduce_tu_letra"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/boton_Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InformacionparaAdivinar" />

    <TextView
        android:id="@+id/InformacionparaAdivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:elegantTextHeight="false"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/informacion"
        android:textAlignment="center"
        android:textColor="#F60606"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/botongirar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c22" />


