<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_nombre"
        android:layout_width="142dp"
        android:layout_height="43dp"
        android:backgroundTint="#FF5722"
        android:fontFamily="sans-serif-black"
        android:text="@string/nombre"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="21dp" />

    <Button
        android:id="@+id/button_puntos"
        android:layout_width="142dp"
        android:layout_height="43dp"
        android:backgroundTint="#FF5722"
        android:fontFamily="sans-serif-black"
        android:text="@string/puntos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/textView_variable_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/variable_nombre"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:id="@+id/textView_variable_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/variable_puntos"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="77dp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="505dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="97dp">

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>