<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textPuntos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/CabezeraMain"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/naranja"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/ruleta_de_la_suerte"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/ruleta"
        android:layout_width="193dp"
        android:layout_height="232dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:onClick="touchRuleta"
        android:rotation="270"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CabezeraMain"
        app:srcCompat="@drawable/ruleta" />

    <ImageView
        android:id="@+id/pin"
        android:layout_width="215dp"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:scaleX="0.25"
        android:scaleY="0.25"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ruleta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_nombre"
        app:srcCompat="@drawable/pin" />

    <TextView
        android:id="@+id/c0"
        android:layout_width="39dp"
        android:layout_height="53dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/panelespacio"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_nombre"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="39dp"
        android:layout_height="53dp"
        android:background="@drawable/panelespacio"
