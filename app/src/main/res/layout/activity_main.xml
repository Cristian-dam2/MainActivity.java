        app:layout_constraintStart_toEndOf="@+id/c23"
        app:layout_constraintTop_toBottomOf="@+id/c15"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/c25"
        android:layout_width="39dp"
