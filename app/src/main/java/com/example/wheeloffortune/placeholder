public void iniciarSesion(View view) {
        String email = intro_mail.getText().toString();
        String contrasena = intro_pwd.getText().toString();

        if (email.isEmpty()) {
            intro_mail.setError("Debe introducir un email");
            return;
        }
        if (contrasena.isEmpty()) {
            intro_pwd.setError("Debe introducir una contrase√±a");
            return;
        }

        boton_acceso.setEnabled(false);
        barra_progreso.setVisibility(View.VISIBLE);
        myAuth.signInWithEmailAndPassword(email, contrasena).addOnCompleteListener(new OnCompleteListener<AuthResult>() {
            @Override
            public void onComplete(@NonNull Task<AuthResult> task) {
                if (task.isSuccessful()) {
                    barra_progreso.setVisibility(View.INVISIBLE);
                    Toast.makeText(Login.this, "Credenciales correctas, bienvenido.", Toast.LENGTH_SHORT).show();
                    Intent intent = new Intent(getApplicationContext(), MainActivity.class);
                    startActivity(intent);
                    return;
                }

                barra_progreso.setVisibility(View.INVISIBLE);
                boton_acceso.setEnabled(true);
                Toast.makeText(Login.this, task.getException().getMessage(), Toast.LENGTH_LONG).show();
            }
        });
    }